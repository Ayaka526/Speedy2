<section class="login-body">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                    </div>
                      <div class="signup-main">

                        <div class="row">
                            <div class="col-xs-offset-1 col-xs-10">
                                <div class="signup-sign">
                                    <div class="sign" align="center">Sign up</div>
                                </div>
                            </div>
                        </div>
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <div class="name">
                                <label class="control-label sr-only" for="inputEmail">Name</label>
                                <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"name"%>
                            </div>
                            <div class="mail">
                                <label class="control-label sr-only" for="inputEmail">Email</label>
                                <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"mail address"%>
                            </div>
                            <div class="pass">

                                <label class="control-label sr-only " for="inputEmail">Password</label>
                                 <%= f.label :password, class:"password-title" %>
                                   <% if @minimum_password_length %>
                                   <em class="password-attention">(<%= @minimum_password_length %> characters minimum)</em>
                                 <% end %><br />
                                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputEmail", placeholder:"new password" %>
                            </div>
                            <div class="pass-confirm">
                                <%= f.label :password_confirmation,class:"password-title" %><br />
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"pass comfirmation"%>
                            </div>

                                <%= f.submit "send", class:"send"  %>
                                <%= render "devise/shared/links" %>
                        <% end %>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
