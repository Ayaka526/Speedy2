<section class="login-body">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                    </div>
                    <div class="login-main">

                        <div class="row">
                            <div class="col-xs-offset-1 col-xs-10">
                                <div class="login-sign">
                                    <p class="sign" align="center">Sign in</p>
                                </div>
                            </div>
                        </div>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="mail">
                                <label class="control-label sr-only" for="inputEmail">Email</label>
                                <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"mail address"%>
                            </div>
                            <div class="pass">
                                <label class="control-label sr-only" for="inputEmail">Password</label>
                                <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputEmail", placeholder:"password" %>
                            </div>
                                <%= f.submit "send", class:"send"  %>
                                <%= render "devise/shared/links" %>
                        <% end %>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
