
<div class="container-fluid">
	<div class="row">
				<h1 class="profile-name">My page</h1>
					<% if @user.id == current_user.id || current_user.try(:admin?)%>
						<div class ="account-info">
							<li class="list-group-item fullname">User Name：<%= @user.name %></li>
							<li class="list-group-item email">Mail Address： <%= @user.email %></li>
						</div>
							<div class="edit-button"><%= link_to "Edit",edit_user_path(@user),class:"col-xs-6 btn btn-default" %></div>
							<div class="reset-button"><%= link_to "Reset / Delete",edit_user_registration_path,class:"col-xs-6 btn btn-default" %></div>
					<% end %>

					<% if @user.reply.present? %>
						<div class="panel panel-info ">
							<div class="panel-heading">
								<h5 class="panel-title">問い合わせ</h5>
							</div>
							<div class="panel-body"><%= @user.reply %></div>
						</div>
					<% end %>
			</ul>
	</div>
</div>








